{
  "name": "splendid",
  "version": "0.0.2",
  "description": "Simple visualisation of complex data",
  "main": "build/splendid.js",
  "directories": {
    "examples": "examples",
    "test": "test"
  },
  "scripts": {
    "build": "rm -rf build && mkdir build && rollup -f umd -n splendid -o build/splendid.js -- index.js && cp build/splendid.js examples/",
    "test": "tape test/**/*-test.js",
    "pretest": "npm run build",
    "clean": "rimraf build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rwakulszowa/splendid.git"
  },
  "keywords": [
    "d3",
    "graph",
    "plot",
    "data",
    "viz"
  ],
  "author": "rwakulszowa",
  "license": "BSD-3-Clause",
  "homepage": "https://github.com/rwakulszowa/splendid",
  "devDependencies": {
    "rimraf": "^2.6.2",
    "rollup": "^0.37.0",
    "tape": "^4"
  }
}
